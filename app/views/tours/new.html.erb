
<body>
  <div class="container">
    <div class="box">

      <div class="label"><h1>New Tour</h1></div>



      <%= form_with model: @tour, local: true do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :price %>
          <%= form.text_field :price, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :date %>
          <%= form.date_select :date, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :photo %>
          <%= form.file_field :photo, class: 'form-control' %>
        </div>

        <%= form.submit "Create Tour", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</body>

