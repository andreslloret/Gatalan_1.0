<h1>New Booking</h1>

<%= simple_form_for [@tour, @booking]  do |form| %>
  <div class="form-group">
    <%= form.label :date %>
    <%= form.input :date,as: :date, html5: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :number_of_people %>
    <%= form.number_field :number_of_people, class: "form-control" %>
  </div>

  <%= form.submit "Book Now", class: "btn btn-primary" %>
<% end %>
