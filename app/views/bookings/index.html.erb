<div class="container">
  <h1 class="text-center">My Bookings</h1>
  <div class="row justify-content-center">
    <div class="col-md-8 text-left">
      <% if @my_bookings.any? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Tour</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @my_bookings.each do |booking| %>
              <tr>
                <td><%= booking.date %></td>
                <td><%= booking.tour.name %></td>
                <td><%= booking.tour.description %></td>
                <td>
                  <%= button_to "Delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to delete this booking?" }, class: "btn btn-danger btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="lead text-center">You have no bookings yet.</p>
      <% end %>
    </div>
  </div>
</div>
